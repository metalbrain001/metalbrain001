{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src/server",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/server/**/*.ts", "src/server/**/*.js", "src/server/**/*.json"],
}
